{
  "name": "composite-kit",
  "private": false,
  "version": "0.5.3",
  "description": "A flexible React component library focusing on composite and configurable patterns",
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "LICENSE",
    "README.md"
  ],
  "scripts": {
    "dev": "vite --config vite.config.site.ts",
    "build:lib": "tsc -b && vite build --config vite.config.lib.ts",
    "build:site": "vite build --config vite.config.site.ts",
    "build": "npm run build:lib && npm run build:site",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "lint:fix:src": "eslint src --fix",
    "lint:fix:demos": "eslint src/demos --fix",
    "lint:fix:components": "eslint src/components --fix",
    "lint:fix:strict": "eslint . --fix --max-warnings=0",
    "preview": "vite preview --config vite.config.site.ts",
    "prepublishOnly": "npm run build:lib",
    "version": "npm run build:lib",
    "postversion": "git push && git push --tags",
    "deploy:web": "pnpm build:site && ossutil cp -r -u dist-site oss://composite-ui -c ./.ossutilconfig.local",
    "macdeploy:web": "pnpm build && ossutilmac64 cp -r -u dist-site oss://composite-ui -c ./.ossutilconfig.local",
    "test:app": "cd examples/test-app-npm && pnpm install && pnpm add composite-kit@latest && pnpm run dev"
  },
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/peiiii/composite-kit.git"
  },
  "keywords": [
    "react",
    "components",
    "composite",
    "configurable",
    "ui",
    "kit"
  ],
  "author": "peiiii",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/peiiii/composite-kit/issues"
  },
  "homepage": "https://github.com/peiiii/composite-kit#readme",
  "dependencies": {
    "@hookform/resolvers": "^5.0.1",
    "@radix-ui/react-avatar": "^1.1.9",
    "@radix-ui/react-dialog": "^1.1.11",
    "@radix-ui/react-dropdown-menu": "^2.1.12",
    "@radix-ui/react-label": "^2.1.4",
    "@radix-ui/react-scroll-area": "^1.2.8",
    "@radix-ui/react-select": "^2.2.2",
    "@radix-ui/react-separator": "^1.1.4",
    "@radix-ui/react-slider": "^1.3.4",
    "@radix-ui/react-slot": "^1.2.0",
    "@radix-ui/react-tabs": "^1.1.11",
    "@tailwindcss/vite": "^4.1.5",
    "class-variance-authority": "^0.7.1",
    "framer-motion": "^12.10.1",
    "lucide-react": "^0.506.0",
    "next-themes": "^0.4.6",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-hook-form": "^7.56.1",
    "react-resizable-panels": "^3.0.2",
    "react-router-dom": "^7.5.3",
    "sonner": "^2.0.3",
    "zod": "^3.24.3"
  },
  "devDependencies": {
    "@eslint/js": "^9.22.0",
    "@types/node": "^22.15.3",
    "@types/react": "^19.0.10",
    "@types/react-dom": "^19.0.4",
    "@vitejs/plugin-react": "^4.3.4",
    "autoprefixer": "^10.4.21",
    "clsx": "^2.1.1",
    "eslint": "^9.22.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "eslint-plugin-unused-imports": "^4.1.4",
    "globals": "^16.0.0",
    "postcss": "^8.5.3",
    "tailwind-merge": "^3.2.0",
    "tailwindcss": "^4.1.5",
    "tw-animate-css": "^1.2.8",
    "typescript": "~5.7.2",
    "typescript-eslint": "^8.26.1",
    "vite": "^6.3.1",
    "vite-plugin-dts": "^4.5.3"
  }
}
